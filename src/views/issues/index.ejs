<h1>Issues</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Done</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody id="issue-list">
    <% if (viewData?.issues?.length) { %>
      <% for (const issue of viewData.issues) { %>
        <tr data-id="<%= issue.id %>">
          <td class="text-center text-primary"><input class="form-check-input" type="checkbox" id="doneCheck" disabled
              <% if (issue.done) { %> checked <% } %> /></td>
          <td class="w-100 <% if (issue.done) { %> text-muted <% } %>">
            <%= issue.description %>
          </td>
          <td class="text-nowrap">
            <a href="./issues/<%= issue.id %>/update">Update</a>
            <a href="./issues/<%= issue.id %>/delete">Delete</a>
          </td>
        </tr>
      <% } %>
    <% } else { %>
      <tr>
        <td colspan="3" class="text-center text-danger">
          There are no tasks to display
        </td>
      </tr>
    <% } %>
  </tbody>
</table>

<%# Socket.IO: Template for the client. The same as above, sort of. %>
<template id="issue-template">
  <tr>
    <td class="text-center text-primary">
      <input class="form-check-input" type="checkbox" disabled />
    </td>
    <td class="w-100"></td>
    <td class="text-nowrap">
      <a>Update</a>
      <a>Delete</a>
    </td>
  </tr>
</template>
